@model DiskHasBorrowerViewModel
@{
    string title = ViewBag.Action + " Checkout";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="CurrentVM.DiskId"></label>
        <select asp-for="CurrentVM.DiskId" class="form-control">
            <option value="">Select a Disk</option>
            @foreach (Disk d in Model.Disks)
            {
                <option value="@d.DiskId">@d.DiskName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="CurrentVM.BorrowerId"></label>
        <select asp-for="CurrentVM.BorrowerId" class="form-control">
            <option value="">Select a Borrower</option>
            @foreach (Borrower d in Model.Borrowers)
            {
                <option value="@d.BorrowerId">@d.Lname, @d.Fname</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="CurrentVM.BorrowedDate">Borrowed Date</label>
        <input asp-for="CurrentVM.BorrowedDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CurrentVM.ReturnedDate">Returned Date</label>
        <input asp-for="CurrentVM.ReturnedDate" type="date" class="form-control" />
    </div>

    <input type="hidden" asp-for="CurrentVM.DiskHasBorrowerId" />
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="DiskHasBorrower" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>
